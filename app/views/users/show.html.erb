
<hr class="featurette-divider">
<div class="container">

	<div class="jumbotron">
		<div class="row text-center">
			<h2><%= @user.first_name %> <%= @user.last_name %></h2>
			<img src="<%= @user.image_url%>" alt="head shot" height="200" width="200" class="img-circle">
				<p><%= @user.email%></p>
		</div>

			<div class="row text-right">
				<p><%= button_to 'about/contact',user_pages_path(@user), method: :get, class: "btn btn-primary" %> </p>


				<% if session[:user_id] == @user.id %>
					<p><%= button_to 'update',edit_user_path, method: :get, class: "btn btn-primary" %> </p>
					<p><%= button_to 'delete', @users, method: :delete, class: "btn btn-primary", data: {confirm: 'Are you sure?'} %> </p>
				<% end%>





		<!-- need to update hardcoded post#id -> posts/:id so that each post, you can add a comment; or add comment on each post show page-->
		<p><a href="/users/<%=@user.id%>/posts" class="btn btn-primary">Click here to view my Posts</a></p>

		<a href="/" class="btn btn-primary">Go back to All Posts Page(site index)</a>
	</div>


	</div>

</div>