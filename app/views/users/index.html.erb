
<div class="container text-center">

	<h1>Welcome to Micro Blog</h1>

	<% flash.each do |name,msg| %>
		<h2 id="<%= name %>"><%= msg %></h2>
	<% end %>


	<% if session[:user_id] == nil %>
		<button><a href="/login">Log In</a></button>
		<button><a href="users/new">Create New User</a></button>
		<% else %>
		<button><a href="/logout">Log Out</a></button>
	<% end %>




<h3>Posts:</h3>
	<% @users.each do |user| %>

				<% user.posts.each do |post|  %>
					<% if post.title.length > 1 %>

						<p><a href="/users/<%= user.id%>/posts/<%= post.id %> "><%= post.title %></a></p>

					<% end %>
				<% end %>


			<p>Users:
				<a href="/users/<%= user.id %>"><%= user.first_name %></a>
			</p><br>


	<% end %>


<a href="/users/1/tags" class="btn btn-primary">ALL TAGS!</a>


</div>