<div class="container">
	<h1>Posts#new</h1>
	<p>Find me in app/views/posts/new.html.erb</p>


	<h1>Create a New Post</h1>

	<div class="row">

	<%= form_for [@user, @posts] do |f| %>
		<%= f.text_field :title, placeholder: "Title" %><br>
		
		<%= text_field_tag :tags, nil, placeholder: "Enter tags" %><br>

		<%= f.text_area :body, placeholder: "Body" %><br>

		<%= f.submit "Save" %>

	<% end %>

		
	<a href="/users/<%= @posts.user_id %>/posts">Go Back</a>

	</div> <!-- Row close -->


</div>  <!-- Container close -->
