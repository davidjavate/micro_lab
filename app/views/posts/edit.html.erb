<div class="container">

	<h1>Posts#edit</h1>
	<p>Find me in app/views/posts/edit.html.erb</p>


	<h1>Edit Post</h1>


	<%= form_for [@user, @post] do |f| %>
	  <div class="form-group">
	    <%= f.text_field :title, placeholder: "Post Title", class: "form-control" %>
	  </div>
	  <div class= "form-group">
	    <%= f.text_area :body,  placeholder: "Post Content", class: "form-control" %>
	  </div>
	  <div class= "form-group">
		  <input type="text" name="tag[name]" value="<%= @post.tags.map(&:name).join(", ") %>" class="form-control">
	  </div>
	  <div class="form-group">
	    <%= f.submit "Save Changes", class: "form-control btn btn-primary" %>
	  </div>
	<% end %>


	<%= button_to "Delete!", user_post_path(@post.user_id, @user.id), method: :delete, class: "btn btn-danger" %>


	<a href="/" class="btn btn-primary">Home</a>

</div>  <!-- container close -->