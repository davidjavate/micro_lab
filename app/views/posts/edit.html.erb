<div class="container">

	<h1>Posts#edit</h1>
	<p>Find me in app/views/posts/edit.html.erb</p>


	<h1>Edit Post</h1>

	<%= form_for :post do |f| %>
		<%= f.text_field :title, placeholder: "Title" %><br>
		
		<input type="text" name="tag[name]" value="<%= @post.tags.map(&:name).join(", ") %>" ><br>

		<%= f.text_area :body, placeholder: "Body" %><br>


		<%= f.submit "Save" %>

	<% end %>



</div>  <!-- container close -->