<div class="container">

	<h3>Comments</h3>
		<div class="row">
			<% @comments.each do |comment| %>
				<div>
					<p> <%= comment.content %> </p>

				</div>
			<% end %>
		</div>
	<div class="container">
	<h1>Add Comment</h1>
	<div class="row">
		<%= form_for [@post, @comments] do |f| %>
			<%= f.text_field :commentable_type, placeholder: "content" %><br>
			<%= f.submit "Save" %>
		<% end %>
	</div>

</div>

